{
  "name": "shortcut-listener",
  "description": "A simple class to listen for keyboard shortcuts",
  "author": "Joost Hobma",
  "license": "MIT",
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://github.com/jossafossa/ShortcutListener",
  "issues": "https://github.com/jossafossa/ShortcutListener/issues",
  "keywords": [
    "keyboard",
    "shortcut",
    "listener"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jossafossa/ShortcutListener.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run --coverage",
    "prepare": "husky",
    "prepublishOnly": "pnpm run typecheck && pnpm run test  && pnpm run build",
    "release": "pnpm publish"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@vitest/coverage-istanbul": "^2.1.5",
    "@vitest/coverage-v8": "^2.1.5",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^15.11.6",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "prettier": "3.3.3",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.5"
  },
  "volta": {
    "node": "20.18.1",
    "pnpm": "9.14.2"
  }
}
